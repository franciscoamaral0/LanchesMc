@model Lanche
<div class="col-sm-4 col-md-4 col-lg-4 a">
    <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>
    <p>Preco: @Model.Preco.ToString("c")</p>
    <h4>
        <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.LancheId" class="text-decoration-none">@Model.Nome</a>
    </h4>
    <p>@Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinho" asp-route-lancheId="@Model.LancheId">
                Incluir no carrinho!
            </a>
        </p>
    </div>
</div>
