@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager;

    
    @if (signInManager.IsSignedIn(User))
    {
        
        <div class="dropdown m-4">
            <a class="btn btn-secondary dropdown-toggle" role="button" id="" data-bs-toggle="dropdown" aria-expanded="False">
                Bem vindo, @Context.User.Identity.Name
            </a>
            <ul class="dropdown-menu">
               
                <form asp-area="" asp-controller="Account" asp-action="Logout" id="LogoutForm" method="post">
                   <button type="submit" style="width: auto" class="dropdown-item">Logout</button>
                </form>

            </ul>
        </div>
    }
    else
    {
        <ul class="nav navbar-nav navbar-left">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@string.Format("{0}{1}", Context.Request.Path, Context.Request.QueryString)">&nbsp; Login &nbsp;</a>
            <a class="nav-link text-light" asp-controller="Account" asp-action="Register" style="color: white">&nbsp;Registro&nbsp;&nbsp;&nbsp;</a>   
        </ul>
    }
