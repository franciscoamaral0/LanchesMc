@model Pedido

<div class="container">
    <div class="jumbotron">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>
    
    <div class="card">
        <div class="card-body">
            <p>Cliente: <strong>@Model.Nome</strong></p>
            <p>Data do Pedido: <strong>@Model.PedidoEnviado</strong></p>
            <p>Número do Pedido: <strong>@Model.PedidoId</strong></p>
        </div>
        
        <table class="table">
            <tr>
                <th></th>
                <th>Quantidade</th>
                <th>Lanche</th>
                <th>Preço</th>
            </tr>
            @foreach (var item in Model.PedidoItens)
            {
                <tr>
                    <td><img src="@item.Lanche.ImagemThumbnailUrl" width="40" height="40"/></td>
                    <td>@item.Quantidade</td>
                    <td>@item.Lanche</td>
                    <td>@item.Preco</td>
                </tr>
            }

        </table>
        <h4>Valor total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
        <a class="btn btn-outline-info" asp-controller="Home" asp-action="Index">Retonar</a>
    </div>
</div>