@model Lanche

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="Foto Lanche"/>
            </div>
            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
                <h4 class="card-text">Categoria: @Model.Categoria</h4>
                <p class="card-text">@Model.DescricaoDetalhada</p>
                <p class="btn btn-group align-content-lg-end">
                    <a 
                        asp-controller="Lanche" 
                        asp-action="List" 
                        class="btn btn-outline-info">Ver todos os Lanches</a>
                    <a 
                        asp-controller="CarrinhoCompra" 
                        asp-action="AdicionarItemNoCarrinho" 
                        asp-route-lancheId="@Model.LancheId"
                        class="btn btn-primary"
                        id="cartButton">
                        Adicionar @Model.Nome ao carrinho de compras!
                    </a>
                </p>

            </div>
        </div>

    </div>
</div>